@{
    ViewData["Title"] = "Contact Us - MUSIC REVIEWS";
}  

<main class="main-content">
            <div class="container">
                <div class="page">
                    <div class="breadcrumbs">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <span>Contact</span>
                    </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-md-4">
                                <h2>Contact</h2>
                                <ul class="contact-detail">
                                    <li>
                                        <img src="~/images/icon-contact-map.png" alt="#">
                                        <address><span>Oulton College</span> <br>4 Flanders Ct, Moncton</address>
                                    </li>
                                    <li>
                                        <img src="~/images/icon-contact-phone.png" alt="phone">
                                        <a href="tel:15068589696">+1 506 858 9696</a>
                                    </li>
                                    <li>
                                        <img src="~/images/icon-contact-message.png" alt="">
                                        <a href="website@gmail.com">website@gmail.com</a>
                                    </li>
                                </ul>
                                <div class="contact-form">
                                    <input type="text" class="name" placeholder="Name...">
                                    <input type="text" class="email" placeholder="Email...">
                                    <input type="text" class="website" placeholder="Website...">
                                    <textarea class="message" placeholder="Message..."></textarea>
                                    <input type="submit" value="Send Message ">
                                </div>
                            </div>
                            <div class="col-md-7 col-md-offset-1">
                                <img src="~/images/oultoncollege.jpg" alt="Oulton College"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- .container -->
        </main>
        
